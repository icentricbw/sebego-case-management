<div class="timeline">
    {% if field.value is not empty %}
        {% for update in field.value|slice(0, 10) %}
            <div class="mb-3">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-start mb-2">
                            <div>
                                {% set updateType = update.updateType.value %}
                                {% if updateType == 'HEARING_OUTCOME' %}
                                    <span class="badge badge-info">{{ updateType|replace({'_': ' '}) }}</span>
                                {% elseif updateType == 'SETTLEMENT' or updateType == 'CLIENT_MEETING' %}
                                    <span class="badge badge-success">{{ updateType|replace({'_': ' '}) }}</span>
                                {% elseif updateType == 'JUDGMENT' %}
                                    <span class="badge badge-danger">{{ updateType|replace({'_': ' '}) }}</span>
                                {% else %}
                                    <span class="badge badge-secondary">{{ updateType|replace({'_': ' '}) }}</span>
                                {% endif %}

                                {% if update.eventDate %}
                                    <small class="text-muted ms-2">
                                        <i class="fa fa-calendar"></i> {{ update.eventDate|date('Y-m-d') }}
                                    </small>
                                {% endif %}
                            </div>
                            <small class="text-muted">
                                {{ update.createdBy }}<br>
                                {{ update.createdAt|date('Y-m-d H:i') }}
                            </small>
                        </div>
                        <p class="mb-0">
                            {% if update.content|length > 200 %}
                                {{ update.content|slice(0, 200) }}...
                            {% else %}
                                {{ update.content }}
                            {% endif %}
                        </p>
                    </div>
                </div>
            </div>
        {% endfor %}

        {% if field.value|length > 10 %}
            <p class="text-muted text-center">
                <small>Showing 10 most recent of {{ field.value|length }} total updates</small>
            </p>
        {% endif %}
    {% else %}
        <p class="text-muted">No updates recorded for this matter</p>
    {% endif %}
</div>
