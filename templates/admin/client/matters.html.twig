<div class="table-responsive">
    <table class="table table-hover table-sm">
        <thead>
            <tr>
                <th>File Number</th>
                <th>Description</th>
                <th>Type</th>
                <th>Status</th>
                <th>Role</th>
                <th>Lead Lawyer</th>
            </tr>
        </thead>
        <tbody>
            {% if field.value is not empty %}
                {% for matterClient in field.value %}
                    <tr>
                        <td><strong>{{ matterClient.matter.fileNumber }}</strong></td>
                        <td>
                            {% if matterClient.matter.description|length > 50 %}
                                {{ matterClient.matter.description|slice(0, 50) }}...
                            {% else %}
                                {{ matterClient.matter.description }}
                            {% endif %}
                        </td>
                        <td><span class="badge badge-secondary">{{ matterClient.matter.caseType }}</span></td>
                        <td>
                            {% set status = matterClient.matter.status.value %}
                            {% if status == 'ACTIVE' %}
                                <span class="badge badge-success">{{ status }}</span>
                            {% elseif status == 'CLOSED' %}
                                <span class="badge badge-secondary">{{ status }}</span>
                            {% else %}
                                <span class="badge badge-warning">{{ status }}</span>
                            {% endif %}
                        </td>
                        <td>
                            {% if matterClient.clientRole %}
                                {{ matterClient.clientRole.value }}
                            {% else %}
                                <span class="text-muted">-</span>
                            {% endif %}
                        </td>
                        <td>{{ matterClient.matter.leadLawyer.fullName }}</td>
                    </tr>
                {% endfor %}
            {% else %}
                <tr>
                    <td colspan="6" class="text-center text-muted">No matters associated with this client</td>
                </tr>
            {% endif %}
        </tbody>
    </table>
</div>
