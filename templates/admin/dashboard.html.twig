{% extends '@EasyAdmin/page/content.html.twig' %}

{% block content_title %}
    <h1 class="mb-3">
        <i class="fas fa-home"></i> Sebego Legal Case Management System
    </h1>
    <p class="text-muted">Overview of your legal practice</p>
{% endblock %}

{% block main %}
    {# Statistics Cards #}
    <div class="row mb-4">
        <div class="col-md-3 col-sm-6 mb-3">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body bg-primary text-white rounded">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-subtitle mb-2 text-white-50">Active Matters</h6>
                            <h2 class="card-title mb-0">{{ activeMatters }}</h2>
                        </div>
                        <div>
                            <i class="fas fa-briefcase fa-3x opacity-50"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3 col-sm-6 mb-3">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body bg-success text-white rounded">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-subtitle mb-2 text-white-50">Total Clients</h6>
                            <h2 class="card-title mb-0">{{ totalClients }}</h2>
                        </div>
                        <div>
                            <i class="fas fa-users fa-3x opacity-50"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3 col-sm-6 mb-3">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body bg-warning text-white rounded">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-subtitle mb-2 text-white-50">Pending Tasks</h6>
                            <h2 class="card-title mb-0">{{ pendingTasks }}</h2>
                        </div>
                        <div>
                            <i class="fas fa-tasks fa-3x opacity-50"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3 col-sm-6 mb-3">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body bg-danger text-white rounded">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-subtitle mb-2 text-white-50">Overdue Tasks</h6>
                            <h2 class="card-title mb-0">{{ overdueTasks }}</h2>
                        </div>
                        <div>
                            <i class="fas fa-exclamation-triangle fa-3x opacity-50"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    {# Additional Statistics Row #}
    <div class="row mb-4">
        <div class="col-md-6 col-sm-6 mb-3">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body bg-info text-white rounded">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-subtitle mb-2 text-white-50">Matters This Week</h6>
                            <h2 class="card-title mb-0">{{ mattersThisWeek }}</h2>
                            <small class="text-white-50">
                                {{ weekStart|date('M d') }} - {{ weekEnd|date('M d, Y') }}
                            </small>
                        </div>
                        <div>
                            <i class="fas fa-calendar-week fa-3x opacity-50"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-6 col-sm-6 mb-3">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body bg-secondary text-white rounded">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-subtitle mb-2 text-white-50">Archived Matters</h6>
                            <h2 class="card-title mb-0">{{ archivedMatters }}</h2>
                        </div>
                        <div>
                            <i class="fas fa-archive fa-3x opacity-50"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    {# Main Content Row #}
    <div class="row">
        {# Recent Matters #}
        <div class="col-lg-6 mb-4">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-white border-bottom">
                    <h5 class="mb-0">
                        <i class="fas fa-briefcase text-primary"></i> Recent Matters
                    </h5>
                </div>
                <div class="card-body p-0">
                    {% if recentMatters is empty %}
                        <div class="p-4 text-center text-muted">
                            <i class="fas fa-inbox fa-3x mb-3"></i>
                            <p>No matters found</p>
                        </div>
                    {% else %}
                        <div class="list-group list-group-flush">
                            {% for matter in recentMatters %}
                                <a href="{{ ea_url()
                                    .setController('App\\Controller\\Admin\\MatterCrudController')
                                    .setAction('detail')
                                    .setEntityId(matter.id) }}"
                                   class="list-group-item list-group-item-action">
                                    <div class="d-flex justify-content-between align-items-start">
                                        <div class="flex-grow-1">
                                            <h6 class="mb-1">
                                                {{ matter.fileNumber }}
                                                {% if matter.statusType %}
                                                    <span class="badge bg-{{ matter.statusType.value == 'ACTIVE' ? 'success' : 'secondary' }}">
                                                        {{ matter.statusType.value }}
                                                    </span>
                                                {% endif %}
                                            </h6>
                                            <p class="mb-1 text-muted small">
                                                {{ matter.description|u.truncate(80, '...') }}
                                            </p>
                                            <small class="text-muted">
                                                <i class="fas fa-folder"></i> {{ matter.caseType ? matter.caseType.name : 'N/A' }}
                                            </small>
                                        </div>
                                        <small class="text-muted ms-2">
                                            {{ matter.createdAt ? matter.createdAt|date('M d') : 'N/A' }}
                                        </small>
                                    </div>
                                </a>
                            {% endfor %}
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>

        {# Upcoming Tasks #}
        <div class="col-lg-6 mb-4">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-white border-bottom">
                    <h5 class="mb-0">
                        <i class="fas fa-tasks text-warning"></i> Upcoming Tasks
                    </h5>
                </div>
                <div class="card-body p-0">
                    {% if upcomingTasks is empty %}
                        <div class="p-4 text-center text-muted">
                            <i class="fas fa-check-circle fa-3x mb-3"></i>
                            <p>No upcoming tasks</p>
                        </div>
                    {% else %}
                        <div class="list-group list-group-flush">
                            {% for task in upcomingTasks %}
                                <a href="{{ ea_url()
                                    .setController('App\\Controller\\Admin\\TaskCrudController')
                                    .setAction('detail')
                                    .setEntityId(task.id) }}"
                                   class="list-group-item list-group-item-action">
                                    <div class="d-flex justify-content-between align-items-start">
                                        <div class="flex-grow-1">
                                            <h6 class="mb-1">{{ task.title }}</h6>
                                            <p class="mb-1 text-muted small">
                                                {{ task.description ? task.description|u.truncate(60, '...') : 'No description' }}
                                            </p>
                                            {% if task.matter %}
                                                <small class="text-muted">
                                                    <i class="fas fa-briefcase"></i> {{ task.matter.fileNumber }}
                                                </small>
                                            {% endif %}
                                        </div>
                                        <div class="text-end ms-2">
                                            <small class="text-muted d-block">
                                                {{ task.dueDate|date('M d, Y') }}
                                            </small>
                                            {% if task.taskStatusType %}
                                                <span class="badge bg-{{ task.taskStatusType.value == 'PENDING' ? 'warning' : 'success' }}">
                                                    {{ task.taskStatusType.value }}
                                                </span>
                                            {% endif %}
                                        </div>
                                    </div>
                                </a>
                            {% endfor %}
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>

    {# Matters This Week #}
    <div class="row">
        <div class="col-lg-12 mb-4">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-white border-bottom">
                    <h5 class="mb-0">
                        <i class="fas fa-calendar-week text-info"></i> Matters Filed This Week
                        <small class="text-muted">({{ weekStart|date('M d') }} - {{ weekEnd|date('M d, Y') }})</small>
                    </h5>
                </div>
                <div class="card-body p-0">
                    {% if mattersThisWeekList is empty %}
                        <div class="p-4 text-center text-muted">
                            <i class="fas fa-calendar-times fa-3x mb-3"></i>
                            <p>No matters filed this week</p>
                        </div>
                    {% else %}
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                <tr>
                                    <th>File Number</th>
                                    <th>Description</th>
                                    <th>Case Type</th>
                                    <th>Filing Date</th>
                                    <th>Status</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for matter in mattersThisWeekList %}
                                    <tr>
                                        <td>
                                            <a href="{{ ea_url()
                                                .setController('App\\Controller\\Admin\\MatterCrudController')
                                                .setAction('detail')
                                                .setEntityId(matter.id) }}">
                                                <strong>{{ matter.fileNumber }}</strong>
                                            </a>
                                        </td>
                                        <td>{{ matter.description|u.truncate(50, '...') }}</td>
                                        <td>
                                            <i class="fas fa-folder"></i>
                                            {{ matter.caseType ? matter.caseType.name : 'N/A' }}
                                        </td>
                                        <td>{{ matter.filingDate ? matter.filingDate|date('M d, Y') : 'N/A' }}</td>
                                        <td>
                                            {% if matter.statusType %}
                                                <span class="badge bg-{{ matter.statusType.value == 'ACTIVE' ? 'success' : 'secondary' }}">
                                                        {{ matter.statusType.value }}
                                                    </span>
                                            {% endif %}
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>

    {# Matters by Case Type Chart #}
    {% if mattersByCaseType is not empty %}
        <div class="row">
            <div class="col-lg-12 mb-4">
                <div class="card shadow-sm border-0">
                    <div class="card-header bg-white border-bottom">
                        <h5 class="mb-0">
                            <i class="fas fa-chart-pie text-success"></i> Active Matters by Case Type
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            {% for item in mattersByCaseType %}
                                <div class="col-md-3 col-sm-6 mb-3">
                                    <div class="text-center p-3 bg-light rounded">
                                        <h3 class="text-primary mb-2">{{ item.matterCount }}</h3>
                                        <p class="mb-0 text-muted">{{ item.caseType }}</p>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {% endif %}
{% endblock %}
