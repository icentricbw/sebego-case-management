{# templates/admin/location/movements.html.twig #}

{% if field.value is empty %}
    <div class="alert alert-info">
        <i class="fas fa-info-circle"></i> No file movements to this location yet.
    </div>
{% else %}
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead>
            <tr>
                <th>Date</th>
                <th>Matter</th>
                <th>From</th>
                <th>Moved By</th>
                <th>Reason</th>
            </tr>
            </thead>
            <tbody>
            {% for movement in field.value|slice(0, 10) %}
                <tr>
                    <td>{{ movement.movedAt|date('M d, Y H:i') }}</td>
                    <td>
                        <strong>{{ movement.matter.fileNumber }}</strong><br>
                        <small class="text-muted">{{ movement.matter.description|slice(0, 50) }}</small>
                    </td>
                    <td>
                        {% if movement.fromLocation %}
                            {{ movement.fromLocation.name }}
                        {% else %}
                            <span class="text-muted">Initial placement</span>
                        {% endif %}
                    </td>
                    <td>{{ movement.movedBy ? movement.movedBy.fullName : 'N/A' }}</td>
                    <td>{{ movement.reason|default('N/A') }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        {% if field.value|length > 10 %}
            <p class="text-muted text-center">
                Showing 10 of {{ field.value|length }} movements
            </p>
        {% endif %}
    </div>
{% endif %}
