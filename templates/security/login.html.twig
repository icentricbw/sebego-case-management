{% extends 'base_auth.html.twig' %}

{% block title %}Login - Sebego Legal{% endblock %}

{% block body %}
    <section class="vh-100 d-flex align-items-center justify-content-center">
        <div class="container mx-auto col-xxl-4 col-xl-5 col-lg-5 col-md-7 col-sm-9">
            <div class="d-flex mx-auto align-items-center">
                <img class="img-fluid w-50 mx-auto" src="{{ asset('assets/images/logo.png') }}" alt="Logo">
            </div>
            <div class="text-center my-5">
                <h1 class="fs-2 fw-bold">File Management System</h1>
            </div>
            <div class="card shadow-lg">
                <div class="card-body p-4">
                    {# Error Message #}
                    {% if error %}
                        <div class="alert alert-danger d-flex align-items-center" role="alert">
                            <i class="fas fa-exclamation-triangle me-2"></i>
                            <div>
                                {{ error.messageKey|trans(error.messageData, 'security') }}
                            </div>
                        </div>
                    {% endif %}

                    {# Already Logged In Message #}
                    {% if app.user %}
                        <div class="alert alert-info d-flex align-items-center" role="alert">
                            <i class="fas fa-info-circle me-2"></i>
                            <div>
                                You are logged in as <strong>{{ app.user.userIdentifier }}</strong>.
                                <a href="{{ path('app_logout') }}" class="alert-link">Logout</a>
                            </div>
                        </div>
                    {% endif %}

                    {# Login Form #}
                    <form method="POST" action="{{ path('app_login') }}" autocomplete="off">

                        {# Email/Username Field #}
                        <div class="mb-3">
                            <label class="form-label fw-semibold" for="inputEmail">
                                <i class="fas fa-envelope text-muted me-1"></i>
                                Email Address
                            </label>
                            <input type="email"
                                   value="{{ last_username }}"
                                   name="email"
                                   id="inputEmail"
                                   class="form-control form-control-lg"
                                   placeholder="Enter your email"
                                   autocomplete="email"
                                   required
                                   autofocus>
                        </div>

                        {# Password Field #}
                        <div class="mb-3">
                            <label class="form-label fw-semibold" for="inputPassword">
                                <i class="fas fa-lock text-muted me-1"></i>
                                Password
                            </label>
                            <input type="password"
                                   name="password"
                                   id="inputPassword"
                                   class="form-control form-control-lg"
                                   placeholder="Enter your password"
                                   autocomplete="current-password"
                                   required>
                        </div>

                        {# Remember Me Checkbox #}
                        <div class="mb-3 form-check">
                            <input type="checkbox"
                                   class="form-check-input"
                                   id="remember_me"
                                   name="_remember_me">
                            <label class="form-check-label" for="remember_me">
                                Remember me
                            </label>
                        </div>

                        {# CSRF Token #}
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                        {# Submit Button #}
                        <div class="d-grid gap-2 mb-3">
                            <button class="btn btn-sebego btn-lg" type="submit">
                                <i class="fas fa-sign-in-alt me-2"></i>
                                Sign In
                            </button>
                        </div>

                        {# Forgot Password Link #}
                        <div class="text-center">
                            <a href="{{ path('app_forgot_password_request') }}"
                               class="text-decoration-none"
                               style="color: var(--sebego-primary);">
                                <i class="fas fa-question-circle me-1"></i>
                                Forgot your password?
                            </a>
                        </div>
                    </form>

                </div>
            </div>
            <div class="text-center mt-4 copyright">
                <p class="mb-1">
                    <i class="fas fa-copyright"></i> {{ "now"|date("Y") }}
                    <strong>Sebego Legal Services</strong>
                </p>
                <p class="mb-0 small">
                    All rights reserved
                </p>
            </div>
        </div>
    </section>
{% endblock %}
