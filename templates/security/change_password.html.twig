{% extends 'base_auth.html.twig' %}

{% block title %}Change Password - Sebego Legal{% endblock %}

{% block body %}
    <section class="vh-100 d-flex align-items-center justify-content-center py-5">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6 col-lg-5">

                    {# Alert for First Login #}
                    {% if isFirstLogin %}
                        <div class="alert alert-warning border-0 shadow-sm mb-4">
                            <h5 class="alert-heading">
                                <i class="fas fa-exclamation-triangle me-2"></i>
                                Password Change Required
                            </h5>
                            <p class="mb-0">
                                For security reasons, you must change your password before continuing.
                                Please create a strong password that you haven't used elsewhere.
                            </p>
                        </div>
                    {% endif %}

                    {# Change Password Card #}
                    <div class="card auth-card shadow-lg border-0">
                        <div class="card-header text-center">
                            <h2 class="fs-4 fw-bold mb-1">
                                <i class="fas fa-key me-2"></i>
                                {% if isFirstLogin %}Set New Password{% else %}Change Password{% endif %}
                            </h2>
                            <p class="mb-0 opacity-75 small">
                                {% if isFirstLogin %}
                                    Create a secure password for your account
                                {% else %}
                                    Update your account password
                                {% endif %}
                            </p>
                        </div>

                        <div class="card-body p-4">
                            {# Flash Messages #}
                            {% for message in app.flashes('success') %}
                                <div class="alert alert-success d-flex align-items-center" role="alert">
                                    <i class="fas fa-check-circle me-2"></i>
                                    <div>{{ message }}</div>
                                </div>
                            {% endfor %}

                            {% for message in app.flashes('error') %}
                                <div class="alert alert-danger d-flex align-items-center" role="alert">
                                    <i class="fas fa-exclamation-circle me-2"></i>
                                    <div>{{ message }}</div>
                                </div>
                            {% endfor %}

                            {{ form_start(changePasswordForm) }}

                            {# Current Password (only if not first login) #}
                            {% if not isFirstLogin %}
                                <div class="mb-3">
                                    {{ form_label(changePasswordForm.currentPassword, null, {
                                        'label_attr': {'class': 'form-label fw-semibold'}
                                    }) }}
                                    {{ form_widget(changePasswordForm.currentPassword) }}
                                    {{ form_errors(changePasswordForm.currentPassword) }}
                                </div>
                            {% endif %}

                            {# New Password #}
                            <div class="mb-3">
                                {{ form_label(changePasswordForm.plainPassword.first, null, {
                                    'label_attr': {'class': 'form-label fw-semibold'}
                                }) }}
                                {{ form_widget(changePasswordForm.plainPassword.first) }}
                                {{ form_errors(changePasswordForm.plainPassword.first) }}
                            </div>

                            {# Confirm Password #}
                            <div class="mb-4">
                                {{ form_label(changePasswordForm.plainPassword.second, null, {
                                    'label_attr': {'class': 'form-label fw-semibold'}
                                }) }}
                                {{ form_widget(changePasswordForm.plainPassword.second) }}
                                {{ form_errors(changePasswordForm.plainPassword.second) }}
                            </div>

                            {# Password Requirements #}
                            <div class="alert alert-info border-0 mb-4">
                                <strong><i class="fas fa-info-circle me-1"></i> Password Requirements:</strong>
                                <ul class="mb-0 mt-2 small">
                                    <li>At least 8 characters long</li>
                                    <li>Mix of uppercase and lowercase letters</li>
                                    <li>Include at least one number</li>
                                    <li>Include at least one special character</li>
                                    <li>Not previously compromised in data breaches</li>
                                </ul>
                            </div>

                            {# Submit Button #}
                            <div class="d-grid">
                                <button type="submit" class="btn btn-sebego btn-lg">
                                    <i class="fas fa-lock me-2"></i>
                                    {% if isFirstLogin %}Set Password{% else %}Change Password{% endif %}
                                </button>
                            </div>

                            {{ form_end(changePasswordForm) }}

                            {# Logout Link #}
                            <div class="text-center mt-3">
                                <a href="{{ path('app_logout') }}" class="text-muted text-decoration-none small">
                                    <i class="fas fa-sign-out-alt me-1"></i>
                                    Logout
                                </a>
                            </div>
                        </div>
                    </div>

                    {# Footer #}
                    <div class="text-center mt-4 copyright">
                        <p class="mb-0">
                            <i class="fas fa-shield-alt"></i> Your security is our priority
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
