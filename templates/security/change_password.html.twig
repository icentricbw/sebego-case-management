{% extends 'base_auth.html.twig' %}

{% block title %}Change Password - Sebego Legal{% endblock %}

{% block body %}
    <section class="vh-100 d-flex align-items-center justify-content-center">
        <div class="container mx-auto col-xxl-4 col-xl-5 col-lg-5 col-md-7 col-sm-9">
            <div class="d-flex mx-auto align-items-center">
                <img class="img-fluid w-50 mx-auto" src="{{ asset('assets/images/logo.png') }}" alt="Logo">
            </div>
            <div class="text-center my-5">
                <h1 class="fs-2 fw-bold">
                    {% if isFirstLogin %}Set New Password{% else %}Change Password{% endif %}
                </h1>
            </div>

            {# Alert for First Login #}
            {% if isFirstLogin %}
                <div class="alert alert-warning border-0 shadow-sm mb-3">
                    <h5 class="alert-heading">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        Password Change Required
                    </h5>
                    <p class="mb-0">
                        For security reasons, you must change your password before continuing.
                        Please create a strong password that you haven't used elsewhere.
                    </p>
                </div>
            {% endif %}

            <div class="card shadow-lg">
                <div class="card-body p-4">
                    {# Flash Messages #}
                    {% for message in app.flashes('success') %}
                        <div class="alert alert-success d-flex align-items-center" role="alert">
                            <i class="fas fa-check-circle me-2"></i>
                            <div>{{ message }}</div>
                        </div>
                    {% endfor %}

                    {% for message in app.flashes('error') %}
                        <div class="alert alert-danger d-flex align-items-center" role="alert">
                            <i class="fas fa-exclamation-circle me-2"></i>
                            <div>{{ message }}</div>
                        </div>
                    {% endfor %}

                    {% for message in app.flashes('warning') %}
                        <div class="alert alert-warning d-flex align-items-center" role="alert">
                            <i class="fas fa-exclamation-triangle me-2"></i>
                            <div>{{ message }}</div>
                        </div>
                    {% endfor %}

                    {# Change Password Form #}
                    {{ form_start(changePasswordForm) }}

                    {# Current Password (only if not first login) #}
                    {% if not isFirstLogin %}
                        <div class="mb-3">
                            <label class="form-label fw-semibold" for="{{ changePasswordForm.currentPassword.vars.id }}">
                                <i class="fas fa-lock text-muted me-1"></i>
                                Current Password
                            </label>
                            {{ form_widget(changePasswordForm.currentPassword, {
                                'attr': {
                                    'class': 'form-control form-control-lg',
                                    'placeholder': 'Enter current password'
                                }
                            }) }}
                            {{ form_errors(changePasswordForm.currentPassword) }}
                        </div>
                    {% endif %}

                    {# New Password #}
                    <div class="mb-3">
                        <label class="form-label fw-semibold" for="{{ changePasswordForm.plainPassword.first.vars.id }}">
                            <i class="fas fa-key text-muted me-1"></i>
                            New Password
                        </label>
                        {{ form_widget(changePasswordForm.plainPassword.first, {
                            'attr': {
                                'class': 'form-control form-control-lg',
                                'placeholder': 'Enter new password'
                            }
                        }) }}
                        {{ form_errors(changePasswordForm.plainPassword.first) }}
                    </div>

                    {# Confirm Password #}
                    <div class="mb-3">
                        <label class="form-label fw-semibold" for="{{ changePasswordForm.plainPassword.second.vars.id }}">
                            <i class="fas fa-key text-muted me-1"></i>
                            Confirm New Password
                        </label>
                        {{ form_widget(changePasswordForm.plainPassword.second, {
                            'attr': {
                                'class': 'form-control form-control-lg',
                                'placeholder': 'Confirm new password'
                            }
                        }) }}
                        {{ form_errors(changePasswordForm.plainPassword.second) }}
                    </div>

                    {# Password Requirements #}
                    <div class="alert alert-info border-0 mb-3">
                        <strong><i class="fas fa-info-circle me-1"></i> Password Requirements:</strong>
                        <ul class="mb-0 mt-2 small">
                            <li>At least 8 characters long</li>
                            <li>Mix of uppercase and lowercase letters</li>
                            <li>Include at least one number</li>
                            <li>Include at least one special character</li>
                            <li>Not previously compromised in data breaches</li>
                        </ul>
                    </div>

                    {# Submit Button #}
                    <div class="d-grid gap-2 mb-3">
                        <button type="submit" class="btn btn-sebego btn-lg">
                            <i class="fas fa-lock me-2"></i>
                            {% if isFirstLogin %}Set Password{% else %}Change Password{% endif %}
                        </button>
                    </div>

                    {# Logout Link #}
                    <div class="text-center">
                        <a href="{{ path('app_logout') }}"
                           class="text-decoration-none"
                           style="color: var(--sebego-primary);">
                            <i class="fas fa-sign-out-alt me-1"></i>
                            Logout
                        </a>
                    </div>

                    {{ form_end(changePasswordForm) }}
                </div>
            </div>

            <div class="text-center mt-4 copyright">
                <p class="mb-1">
                    <i class="fas fa-shield-alt me-1"></i> Your security is our priority
                </p>
                <p class="mb-0 small">
                    <i class="fas fa-copyright"></i> {{ "now"|date("Y") }}
                    <strong>Sebego Legal Services</strong>
                </p>
            </div>
        </div>
    </section>
{% endblock %}
